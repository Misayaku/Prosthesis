<?xml version="1.0" encoding="utf-8"?>

<!-- Répartition linéaire des éléments sur l'écran -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controller.MainActivity"
    android:background="@drawable/main_bg_trans"



    >

    <!-- Texte titre de l'app -->
    <TextView
        android:id="@+id/activity_main_header_text"
        android:text="PROSTHESIS PROJECT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:textSize="22sp"
        android:textColor="#770000"
        android:shadowColor="#FFFFFF"
        android:shadowDx="5"
        android:shadowDy="5"
        android:textStyle="bold"


        />

    <!-- Texte de bienvenue -->
    <TextView
        android:id="@+id/activity_main_greeting_text"
        android:text="WELCOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:shadowColor="#FFFFFF"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:textSize="40sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/activity_main_mode_choice_text"
        android:text=" Select your mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:shadowColor="#FFFFFF"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:textSize="20sp"
        android:textStyle="italic"

        />

    <Button
        android:id="@+id/activity_main_user_button"
        android:text="USER MODE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/mybutton" />

    <Button
        android:id="@+id/activity_main_debug_button"
        android:text="DEBUG MODE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/mybutton"
        />
</LinearLayout>